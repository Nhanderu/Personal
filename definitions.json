{
  "folders": {
    "binaries": "build",
    "source": "source",
    "views": "source/views",
    "assets": "source/assets",
    "contents": "source/assets/contents",
    "documents": "source/assets/documents",
    "images": "source/assets/images",
    "scripts": "source/assets/scripts",
    "stylesheets": "source/assets/stylesheets",
    "tasks": "tasks",
    "tests": "tests"
  },
  "routes": {
      "portuguese": {
          "index": "/pt",
          "pattern": "^\\/pt-..$|^\\/por(t(u(g(u(e(se?)?)?)?)?)?)?$"
      },
      "english": {
          "index": "/en",
          "pattern": "^\\/en-..$|^\\/eng(l(i(sh?)?)?)?$"
      },
      "static": {
          "index": "/public",
          "pattern": "^\\/public\\/(.*)"
      }
  }
}