/*
 * Common.
 */

*
    box-sizing border-box
    margin 0
    padding 0

body
    font-family 'Roboto', sans-serif

img
    height auto
    max-width 100%

a
    font-family inherit

/*
 * Main.
 */

.wrapper
    display flex
    justify-content center
    align-items center
    height 100vh
    width 100vw

    > .box-wrapper
        display flex
        flex-wrap wrap
        width 50rem

        > .box-picture
            flex-basis 40%

            > .picture
                display block
                width 100%

        > .box-profile
            flex-basis 60%
            display flex
            flex-direction column
            justify-content space-between
            padding 3.5rem 2.5rem
            background-color #794

            > .description
                text-align justify
                font-size 1.1rem
                color white

            > .social
                display flex
                justify-content space-between

                > .social-item
                    display flex
                    justify-content center

                    > .social-item-link
                        text-decoration none

                        > .fa
                            display flex
                            justify-content center
                            align-items center
                            height 2.5rem
                            width 2.5rem
                            border-radius 100%
                            font-size 1.5rem
                            color black
                            transition .1s

                        &:hover .fa
                            color white

                        &:hover .fa.fa-facebook
                            background-color #3a5795

                        &:hover .fa.fa-linkedin
                            background-color #007bb6

                        &:hover .fa.fa-github
                            background-color black

                        &:hover .fa.fa-telegram
                            background-color #0088cc

                        &:hover .fa.fa-steam
                            background-color black

                        &:hover .fa.fa-envelope-o
                            background-color #505061

        > .box-links
            flex-basis 100%

            > .links-list
                display flex
                justify-content space-between
                margin-top 2rem

                > .links-item
                    display flex
                    justify-content center

                    > .links-item-link
                        width 10rem
                        padding .6rem
                        border .3rem solid #bca
                        text-align center
                        text-transform uppercase
                        color #bca
                        transition-duration .1s

                        &:hover
                            background-color #475b28
                            border-color #475b28
                            color white

/*
 * Util.
 */

.menu-item
    display inline
    width 100%

    > a
        text-decoration none

.modal
    position fixed
    top 50%
    left 50%
    transform translate3d(-50%, -50%, 0)
    padding 5rem
    color white
    background-color rgba(0, 0, 0, .7)
    transition .5s
    opacity 0
    pointer-events none

    > .modal-close
        position absolute
        top .3rem
        left .5rem
        cursor pointer

        &:hover
            text-decoration underline
