/*
 * Common.
 */

*
    box-sizing border-box
    margin 0
    padding 0

img
    height auto
    max-width 100%

/*
 * Main.
 */

.wrapper
    display flex
    justify-content center
    align-items center
    height 100vh
    width 100vw

    > .box-wrapper
        display flex
        flex-wrap wrap
        width 50rem

        > .box-picture
            flex-basis 40%

            > .picture
                display block
                width inherit

        > .box-profile
            flex-basis 60%
            display flex
            flex-direction column
            justify-content space-between
            padding 3.5rem 2.5rem
            background-color #794

            > .description
                text-align justify
                font-family 'Roboto', sans-serif
                font-size 1.1rem
                color white

            > .social
                display flex
                justify-content space-between

                > .social-item
                    display flex
                    justify-content center

                    > .link-fa
                        text-decoration none

                        > .fa
                            display flex
                            justify-content center
                            align-items center
                            height 2.5rem
                            width 2.5rem
                            border-radius 100%
                            font-size 1.5rem
                            color black

                        &:hover .fa
                            color white

                        &:hover .fa.fa-facebook
                            background-color #3a5795

                        &:hover .fa.fa-linkedin
                            background-color #007bb6

                        &:hover .fa.fa-github
                            background-color black

                        &:hover .fa.fa-telegram
                            background-color #0088cc

                        &:hover .fa.fa-steam
                            background-color black

                        &:hover .fa.fa-envelope-o
                            background-color #505061

        > .box-links
            flex-basis 100%

            > .links-item:hover
                background-color: rgba(0,0,0,0.5);

/*
 * Util.
 */

.menu-item
    display inline
    width 100%

    > a
        text-decoration none
